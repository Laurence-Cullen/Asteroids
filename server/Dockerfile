FROM python:3.9

WORKDIR /code

COPY ./requirements.txt /code/requirements.txt

RUN pip install --no-cache-dir --upgrade -r /code/requirements.txt

RUN apt update

RUN apt --yes install blender

COPY *.py /code/

ENV BLENDER_PATH=blender

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "80"]
